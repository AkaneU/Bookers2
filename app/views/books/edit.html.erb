<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>Editing Book</h2>
      <div class="error_message"><%= render 'layouts/post_error_notice', object: @book %></div>

      <%= form_with model:@book, local:true do |f| %>
        <label for="inputTitle", class="form-label">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control" %>
        <label for="inputBody", class="form-label">Opinion</label>
        <%= f.text_area :body, autofocus: true, id:"inputBody", class: "form-control" %>
        <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>