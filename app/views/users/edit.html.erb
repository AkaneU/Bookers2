<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div>
          <%= @user.errors.count %> error prohibited this obj from being saved:
        </div>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      <% end %>

      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName" %>
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
        <label for="inputImage">ProfileImage</label>
        <%= f.attachment_field :profile_image, id:"inputImage" %>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>