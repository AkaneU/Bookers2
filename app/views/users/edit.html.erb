<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>User info</h2>
      <%= render 'layouts/post_error_notice', object: @user %>

      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
        <label for="inputImage">ProfileImage</label>
        <%= f.attachment_field :profile_image, id:"inputImage", class: "image-attachment" %>
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class: "form-control" %>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>