<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2>User info</h2>
      <div class="error_message"><%= render 'layouts/post_error_notice', object: @user %></div>

      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName", class="form-label">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
        <label for="inputImage", class="form-label">Image</label>
        <%= f.attachment_field :profile_image, id:"inputImage", class: "image-attachment" %>
        <label for="inputIntroduction", class="form-label">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class: "form-control" %>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>