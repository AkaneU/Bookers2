<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h4>user page</h4>
<h5>User info</h5>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<h6>User name </h6>
<%= @user.name %>
<h6>Introduction
<%= @user.introduction %>
<% if @user.id == current_user.id %>
