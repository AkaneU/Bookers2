<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<%= render 'users/user_info', user: @user %>
<%= render 'books/new', books: @new_book %>
<h1>Books</h1>
<% @books.each do |book| %>
  <%= link_to user_path(book.user_id) do %>
    <%= attachment_image_tag book.user.profile_image, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <% end %>
  <%= link_to book.title, book_path(book.id) %>
  <%= book.body %>
<% end %>